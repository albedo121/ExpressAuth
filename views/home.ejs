<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <title> Welcome to ExpressAuth </title>
    <link rel="stylesheet" href="/stylesheets/home_style.css">
    <!-- Fontawesome CDN Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
<body>


  <!-- Login Div -->
  <div class="container">
    <input type="checkbox" id="flip">
    <div class="cover">
      <div class="front">
        <img src="/images/frontImg.jpg" alt="">
        <div class="text">
          <span class="text-1">Every new friend is a <br> new adventure</span>
          <span class="text-2">Let's get started</span>
        </div>
      </div>
      <div class="back">
        <img class="backImg" src="/images/backImg.jpg" alt="">
        <div class="text">
          <span class="text-1">Complete miles of journey <br> with one step</span>
          <span class="text-2">Let's get connected</span>
        </div>
      </div>
    </div>
    <div class="forms">
        <div class="form-content">
          <div class="login-form">
            <div class="title">LOGIN</div>
          <form method="post"  action="/api/v1/user/login">
            <div class="input-boxes">
              <!-- Email -->
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input type="email" name="email" placeholder="Enter your email" required>
              </div>
              <!-- Password -->
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <input type="password" name="password" placeholder="Enter your password" required>
              </div>
              <!-- Forgot Password -->
              <div class="text"><a href="/api/v1/user/forgotpassword">Forgot password?</a></div>
              
              <div class="button input-box">
                <input type="submit" value="Submit">
              </div>
              <div class="text sign-up-text">Don't have an account? <label for="flip">Sigup now</label></div>
              <div class="text sign-up-text"><a href="/api-docs" target="_blank"> Click here</a> to read API documentation.</div>
            </div>
        </form>
      </div>
    


      <!-- Signup Div -->
        <div class="signup-form">
          <div class="title">SIGNUP</div>
        <form method="post" action="/api/v1/user/signup" enctype="multipart/form-data">

          <!-- Full name -->
            <div class="input-boxes">
              <div class="input-box">
                <i class="fas fa-user"></i>
                <input type="text" name="name" placeholder="Enter your full name" required>
              </div>

              <!-- Email -->
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input type="email" name="email" placeholder="Enter your email" required>
              </div>

              <!-- Contact -->
              <div class="input-box">
                <i class="fas fa-phone fa-flip-horizontal"></i>
                <input type="tel" name="contact" placeholder="Enter your contact number" required>
              </div>

              <!-- Password -->
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <input type="password" name="password" placeholder="Enter your password (min 6 chars)" required>
              </div>

              <!-- Photo -->
              <div class="input-box">
                <i class="fas fa-file"></i>
                <label for="photo-upload" class="file-label">Upload a profile photo (optional).</label>
                <input type="file" name="photo">
              </div>

              <!-- Submit button -->
              <div class="button input-box">
                <input type="submit" value="Submit">
              </div>

              <!-- Login -->
              <div class="text sign-up-text">Already have an account? <label for="flip">Login now</label></div>
            </div>

      </form>
    </div>
    </div>
    </div>
  </div>
</body>
</html>